---
// src/components/Card.astro
const { imageUrl, location, title, duration, availability } = Astro.props;
---

<div class="card">
  <img src={imageUrl} alt={title} class="card-image" />
  <div class="card-content">
    <h2 class="location">{location}</h2>
    <h3 class="title">{title}</h3>
    <div class="details">
      <span class="duration">{duration}</span>
      <span class="availability">{availability}</span>
    </div>
  </div>
</div>

<style>
  .card {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
    width: 300px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
    cursor: pointer;
  }
  .card:hover {
    transform: translateY(-5px);
  }
  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  .card-content {
    padding: 16px;
  }
  .location {
    font-size: 14px;
    color: #666;
  }
  .title {
    font-size: 18px;
    margin: 8px 0;
  }
  .details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    color: #999;
  }
  .duration {
    display: flex;
    align-items: center;
  }
  .availability {
    background-color: #007bff;
    color: #fff;
    padding: 2px 8px;
    border-radius: 4px;
  }
</style>
