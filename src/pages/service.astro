---
import Header from "../components/Header.astro";
import Layout from "../layouts/PageLayout.astro";
import Hero from "../components/widgets/Hero.astro";

const metadata = {
  tittle: "Services",
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Services"
    title="Elevate your Travel Experince with our Stunning Services"
    subtitle="Explore our meticulously crafted pakcages tailored to various industries"
    actions={[
      {
        variant: "primary",
        target: "_blank",
        text: "Start exploring",
        href: "/",
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80",
      alt: 'TripsAndTrade Hero Image',
    }}
  />
